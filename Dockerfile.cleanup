FROM golang:1.21-alpine AS builder

WORKDIR /app
COPY go.mod go.sum ./

# Remove any tool directive referencing lefthook
RUN sed -i '/^tool github.com\/evilmartians\/lefthook/d' go.mod

RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o cleanup ./cmd/cleanup

FROM alpine:latest
RUN apk --no-cache add ca-certificates
WORKDIR /root/

COPY --from=builder /app/cleanup .

CMD ["./cleanup"]
